<Window x:Class="MainAluno.AvisoSelecao"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MainAluno"
        mc:Ignorable="d"
        Title="Aviso" Height="120" Width="400">
    <Grid>
        <TextBox x:Name="textBox" HorizontalAlignment="Center" Height="39" Margin="0,14,0,0" TextWrapping="Wrap" Text="Você precisa selecionar um item para concluir esta ação!!!" VerticalAlignment="Top" Width="380" BorderBrush="{x:Null}" Background="{x:Null}" FontSize="14" TextAlignment="Center" IsEnabled="False"/>
        <Button x:Name="button" Content="OK" HorizontalAlignment="Center" Height="25" Margin="0,53,0,0" VerticalAlignment="Top" Width="116" FontSize="14" Background="#FF22A707" BorderBrush="#FF22A707" FontWeight="Bold" Click="button_Click"/>

    </Grid>
</Window>
