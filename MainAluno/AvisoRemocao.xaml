<Window x:Class="MainAluno.AvisoRemocao"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MainAluno"
        mc:Ignorable="d"
        Title="Atenção" Height="170" Width="514">
    <Grid>
        <TextBox x:Name="textBox" HorizontalAlignment="Center" Margin="0,20,0,78" TextWrapping="Wrap" Text="Você está prestes a remover o cadastro de um aluno, esta ação é irrevercível. Tem certeza que deseja excluir permanentemente este cadastro?" Width="474" IsEnabled="False" Foreground="Black" BorderBrush="{x:Null}"/>
        <Button x:Name="button" Content="Sim" Height="30" Margin="410,91,30,0" VerticalAlignment="Top" Background="#FFEA5151" BorderBrush="#FFEA5151" FontSize="14" FontWeight="Bold" Click="button_Click"/>
        <Button x:Name="button1" Content="Cancelar" HorizontalAlignment="Right" Height="30" Margin="0,91,417,0" VerticalAlignment="Top" Width="74" Click="button1_Click" FontSize="14" FontWeight="Bold" BorderBrush="#FF22A707" Background="#FF22A707"/>
    </Grid>
</Window>
